<%= devise_error_messages! %>

<section class="login center">
  <h3>Change your password</h3>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "centered-panel", method: :put }) do |f| %>

    <%= hidden_fields(f, :reset_password_token, :password, :password_confirmation) %>

    <core-field>
      <core-icon icon="lock"></core-icon>
      <paper-input label="New password" type="password" layout vertical id="password"></paper-input>
    </core-field>

    <core-field>
      <core-icon icon="lock"></core-icon>
      <paper-input label="Confirm new password" type="password" layout vertical id="password_confirmation"></paper-input>
    </core-field>

    <div class="center buttons">
      <a class="submit" %>
        <div class="button raised primary">
          <div class="center" fit>Change my password</div>
          <paper-ripple fit></paper-ripple>
        </div>
      </a>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</section>

<%= render "shared/submit_form" %>

<script>
  (function() {
    $('.submit').on('click', function() {
      submit_form('new_user', 'user', ['password', 'password_confirmation']);
    });
  })();
</script>
